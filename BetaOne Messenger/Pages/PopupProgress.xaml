<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="BetaOne_Messenger.Pages.PopupProgress"
               CanBeDismissedByTappingOutsideOfPopup="False"
               Color="Transparent"
               >

    <HorizontalStackLayout Padding="10" BackgroundColor="{DynamicResource Tertiary}" VerticalOptions="Center" HorizontalOptions="Center"  MaximumWidthRequest="200" MaximumHeightRequest="50" Spacing="20">
        <ActivityIndicator IsRunning="true" HorizontalOptions="Center" VerticalOptions="Center" Color="White"/>
        <Label Text="Please stand by." HorizontalOptions="Center" VerticalOptions="Center" TextColor="White"/>
    </HorizontalStackLayout>

</toolkit:Popup>
